document.querySelector("#left #upper-left input").addEventListener("input", async function(event){
    const value = document.querySelector("#left #upper-left input").value;
    if(value == "") {
        return;
    }
    try {
        const response = await axios.post("/srchuser", {
            value: value
        });
        document.querySelector("#left #mainChats").innerHTML = ""; // Clear previous search results
        response.data.users.forEach(user => {
            append(user.profileImage, user.username, user._id);
        });
    } catch (error) {
        console.error('Error searching users:', error);
    }
});

function append(profileImage, username, id){
    const temp = `<div onclick="chatsOpen(event, '${id}', '${profileImage}', '${username}')" id="chat-name" id="${id}">
        <img src="${profileImage}" alt="">
        <h1>${username}</h1>
    </div>`;
    document.querySelector("#left #mainChats").innerHTML += temp;
}


